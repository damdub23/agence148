<div class="intro">
    <div class="intro__bg">
        {% if post.get_thumbnail %}
            <img src="{{ post.thumbnail.src }}" alt="">
        {% else %}
{#            <img src="{{ assets }}images/bg-default.jpg" alt="">#}
        {% endif %}
    </div>

    <div class="intro__bottom">
        <div class="intro__bottom--container">
            {% if post.post_type != 'product' %}
                {% if title %}
                    <h1>
                        {{ title }}
                    </h1>
                {% elseif post.post_title %}
                    <h1>
                        {{ post.post_title }}
                    </h1>
                {% endif %}
            {% endif %}

            <div class="intro__bottom--breadcrumbs">
                {{ function('yoast_breadcrumb', '<nav id="breadcrumbs" class="main-breadcrumbs">','</nav>', false ) }}
            </div>
        </div>
    </div>
</div>