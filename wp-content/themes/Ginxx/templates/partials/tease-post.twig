<article class="tease tease-post post-{{ post.format == '' ? 'default' : post.format }}" id="tease-{{post.ID}}">
	<h2 class="h2"><a href="{{post.link}}">{{post.title}}</a></h2>
	<p>{{post.preview.length(25).read_more(__('Lire la suite', 'gosselink'))}}</p>
	{% if post.thumbnail.src %}
		<img src="{{post.thumbnail.src}}" />
	{% endif %}
</article>
