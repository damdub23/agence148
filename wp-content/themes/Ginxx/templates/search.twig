{% extends "base.twig" %}

{% block content %}
    {% include 'partials/top-intro.twig' %}
    <section class="PageWrapper">
        <div class="PageInner">
                <h3>{{ posts.found_posts }}
                    {{ _n('résultat','résultats', posts.found_posts, 'gosselink') }}
                </h3>

            <ul class="SearchResults">
                {% for item in posts %}
                    <li>
                        <a href="{{ item.link }}">
                            <h4>{{ item.title }}</h4>
                            {% if item.post_content|excerpt %}
                                <p>{{ item.post_content|excerpt(20) }}</p>
                            {% endif %}
                        </a>
                    </li>
                {% endfor %}
            </ul>
            {% include 'partials/pagination.twig' %}
        </div>
    </section>
{% endblock %}