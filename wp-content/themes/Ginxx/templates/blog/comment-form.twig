<div class="comment-form">
    <h3>{{__('Ajouter un commentaire', 'gosselink')}}</h3>

    <form id="form" class="comment-form" method="post" action="{{ site.site_url~'/wp-comments-post.php' }}">
        {% if  user %}
            <input type="hidden" name="email" value="{{ user.email }}">
            <input type="hidden" name="author" value="{{ user.name }}">
            <input type="hidden" name="url" value="{{ user.link }}">
        {% else %}
            <div>
                <label for="email">{{__('Email', 'gosselink')}}</label>
                <input required name="email" type="text" id="email"/>

                <label for="author">{{__('Nom', 'gosselink')}}</label>
                <input required name="author" type="text" id="author"/>

                <label for="url">{{__('URL', 'gosselink')}}</label>
                <input name="url" id="url" type="text"/>
            </div>
        {% endif %}

        <div>
            <label for="comment">{{__('Commentaire', 'gosselink')}}</label>
            <textarea placeholder="comment text" name="comment" cols="60" rows="3" id="comment"></textarea>
        </div>

        <input name="comment_post_ID" value="{{ post.id }}" id="comment_post_ID" type="hidden">
        <input name="comment_parent" id="comment_parent" value="{{ comment.ID|default('0') }}" type="hidden">

        <div>
            <button type="submit" name="Submit" class="btn">{{__('Valider', 'gosselink')}}</button>
            <button type="reset">{{__('Annuler', 'gosselink')}}</button>
            <p>{{__('Votre commentaire sera soumis Ã  validation.', 'gosselink')}}</p>
        </div>
    </form>
</div>
